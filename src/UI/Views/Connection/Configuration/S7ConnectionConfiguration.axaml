<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1350" d:DesignHeight="700"
        x:Class="PlcMonitor.UI.Views.Connection.Configuration.S7ConnectionConfiguration">

    <Grid RowDefinitions="38,38,38,38" ColumnDefinitions="200,200">
        <Label Grid.Row="0" Grid.Column="0" Target="Name">Name</Label>
        <TextBox x:Name="Name" Grid.Row="0" Grid.Column="1" Text="{Binding Name}" />

        <Label Grid.Row="1" Grid.Column="0" Target="Host">Host</Label>
        <TextBox x:Name="Host" Grid.Row="1" Grid.Column="1" Text="{Binding Host}" />

        <Label Grid.Row="2" Grid.Column="0" Target="LocalTsap">Local TSAP</Label>
        <TextBox x:Name="LocalTsap" Grid.Row="2" Grid.Column="1" Text="{Binding LocalTsap}" Watermark="A3:01" />

        <Label Grid.Row="3" Grid.Column="0" Target="RemoteTsap">Remote TSAP</Label>
        <TextBox x:Name="RemoteTsap" Grid.Row="3" Grid.Column="1" Text="{Binding RemoteTsap}" Watermark="A3:01" />
    </Grid>

</UserControl>